<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/login_background"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:background="#28262E"
            tools:ignore="MissingConstraints"
        >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_account_circle"
                android:contentDescription="@string/app_name"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="24sp"
                android:textColor="#F4EDE8"
                android:layout_marginStart="106dp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#28262E"
                android:drawableTop="@drawable/powe_logout"
                android:layout_marginLeft="350dp"
                android:layout_centerVertical="true"
                tools:ignore="MissingConstraints" />

    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_layout"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <!-- GridLayout para os botões -->
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:columnCount="3"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="UselessParent">


                <Button
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    android:theme="@style/Theme.ButtonHome"
                    android:background="@drawable/button_home"
                    android:drawableTop="@drawable/icon_client_add"
                    android:text="Cadastrar Clintes"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:theme="@style/Theme.ButtonHome"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_home"
                    android:drawableTop="@drawable/icon_users_add"
                    android:text="Cadastrar Funcionários"
                    android:textSize="12sp" />

                <!-- Botão 4 -->
                <Button
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:theme="@style/Theme.ButtonHome"

                    android:layout_margin="8dp"
                    android:background="@drawable/button_home"
                    android:drawableTop="@drawable/icon_add_order"
                    android:text="Cadastrar Pedido"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:theme="@style/Theme.ButtonHome"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_home"
                    android:drawableTop="@drawable/icon_list_clients"
                    android:text="Lista de Clientes"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnFuncionarios"
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    android:theme="@style/Theme.ButtonHome"
                    android:background="@drawable/button_home"
                    android:drawableTop="@drawable/icon_users_search"
                    android:text="Lista de Funcionarios"
                    android:textSize="12sp" />



                <Button
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    android:theme="@style/Theme.ButtonHome"
                    android:background="@drawable/button_home"
                    android:drawableTop="@drawable/icon_list_order"
                    android:text="Lista de Pedidos"
                    android:textSize="12sp" />

            </GridLayout>
        </LinearLayout>


<!--    <Button-->
<!--        android:id="@+id/btnFuncionarios"-->
<!--        android:layout_width="wrap_content"-->
